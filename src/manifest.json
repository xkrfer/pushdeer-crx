{
  "description": "client for pushdeer-node",
  "name": "pushdeer-node-client",
  "manifest_version": 3,
  "version": "1.0.0",
  "author": "xkrfer <xkrfer@gmail.com>",
  "homepage_url": "https://github.com/xkrfer/pushdeer-crx",
  "icons": {
    "128": "logo.png",
    "16": "logo.png",
    "48": "logo.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "",
    "default_icon": {
      "16": "logo.png",
      "24": "logo.png",
      "32": "logo.png"
    },
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module",
    "presistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/content.js"
      ],
      "run_at": "document_start"
    }
  ]
}
